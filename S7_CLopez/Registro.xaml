<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S7_CLopez.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Registro!" />

            <Entry x:Name="txtNombre" Placeholder="Ingrese Nombre" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese Usuario" />
            <Entry x:Name="txtContrasena" Placeholder="Ingrese Contraseña" />

            <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked" />
            <Button x:Name="btnSalir" Text="Salir" Clicked="btnSalir_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>